<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/item_background" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/iv_item1_icon"
            android:layout_width="107dp"
            android:layout_height="90dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/domob_item1" />

        <TextView
            android:singleLine="true"
            android:maxLength="5"
            android:id="@+id/tv_item1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_item1_icon"
            android:textColor="@color/black"
            android:textSize="@dimen/item1_title_size" />

        <TextView
            android:id="@+id/tv_item1_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_item1_title"
            android:layout_below="@+id/tv_item1_title"
            android:layout_marginTop="10dp"
            android:lines="2"
            android:textColor="@color/item1_brief"
            android:textSize="@dimen/item1_brief_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#e9e9e9" />

</RelativeLayout>